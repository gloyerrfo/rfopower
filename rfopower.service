[Unit]
Description=Runs /usr/local/bin/run-rfopower.sh
After=network.target
StartLimitIntervalSec=0
  
[Service]
Type=simple
Restart=always
RestartSec=1
User=pi
ExecStart=/usr/local/bin/run-rfopower.sh

[Install]
WantedBy=multi-user.target
